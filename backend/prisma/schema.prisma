// This is the Prisma schema for the Affiliate Automation SaaS

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- Auth & Identity ---

model Tenant {
  id          String   @id @default(uuid())
  name        String
  slug        String?  @unique
  domain      String?  @unique
  plan        Plan     @default(FREE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  products    Product[]
  accounts    MessagingAccount[]
  affiliateCreds AffiliateCredential[]
}

enum Plan {
  FREE
  BASIC
  PRO
  ENTERPRISE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  
  firstName String?
  lastName  String?
  phone     String?
  document  String?  // CPF/CNPJ
  notificationsEnabled Boolean @default(true)

  trialExpiresAt     DateTime?
  subscriptionStatus SubscriptionStatus @default(TRIAL)
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  EXPIRED
  CANCELLED
}

enum Role {
  MASTER
  ADMIN
  USER
}

// --- Affiliate & Marketplaces ---

model AffiliateCredential {
  id            String   @id @default(uuid())
  marketplace   String   // SHOPEE, AMAZON, etc.
  affiliateId   String   // The tag or ID
  apiKey        String?
  apiSecret     String?
  appKey        String?  // New field for Shopee App Key
  tenantId      String
  tenant        Tenant   @relation(fields: [tenantId], references: [id])
}

model Product {
  id               String   @id @default(uuid())
  externalId       String?  // ID in the marketplace
  marketplace      String
  name             String
  originalUrl      String
  affiliateUrl     String
  price            Decimal?
  image            String?
  category         String?
  tenantId         String
  tenant           Tenant   @relation(fields: [tenantId], references: [id])
  createdAt        DateTime @default(now())
  automationLogs   AutomationLog[]
}

// --- Messaging & Social ---

model MessagingAccount {
  id             String   @id @default(uuid())
  platform       Platform // WHATSAPP, TELEGRAM, INSTAGRAM
  name           String
  sessionData    Json?    // Auth tokens, session cookies
  status         AccountStatus @default(ACTIVE)
  tenantId       String
  tenant         Tenant   @relation(fields: [tenantId], references: [id])
  groups         Group[]
}

enum Platform {
  WHATSAPP
  TELEGRAM
  INSTAGRAM
}

enum AccountStatus {
  ACTIVE
  PAUSED
  WARMING_UP
  BLOCKED
}

model Group {
  id          String   @id @default(uuid())
  externalId  String   // WhatsApp JID or Telegram Chat ID
  name        String
  accountId   String
  account     MessagingAccount @relation(fields: [accountId], references: [id])
  category    String?
}

// --- Automation & Queues ---

model AutomationJob {
  id           String   @id @default(uuid())
  scheduleTime DateTime
  status       JobStatus @default(PENDING)
  payload      Json      // Campaign details, content
  tenantId     String
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model AutomationLog {
  id          String   @id @default(uuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  channelId   String   // Target group/account
  status      String
  sentAt      DateTime @default(now())
  clicks      Int      @default(0)
}
